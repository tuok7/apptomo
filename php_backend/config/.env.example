# FILE MẪU CẤU HÌNH MÔI TRƯỜNG
# Copy file này thành .env và thay đổi các giá trị

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=myapp_db

# Security
JWT_SECRET_KEY=your-secret-key-change-this
API_KEY=your-api-key-change-this

# Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=../uploads/

# Email Configuration (nếu cần)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-password
SMTP_FROM=noreply@myapp.com

# App Settings
APP_NAME=MyApp
APP_URL=http://localhost/myapp_api
APP_ENV=development
DEBUG=true
